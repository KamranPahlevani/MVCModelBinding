@using ModelBinding.Models
@model List<Person>
@{
    ViewBag.Title = "NumericAndicatorList";
}

<h2>NumericAndicatorList</h2>

@using (Html.BeginForm())
{
    for (int i = 0; i < Model.Count; i++)
    {
    <div>
        <table style="width: 50%">
            <tr>
                <td style="width: 50%">
                    @Html.LabelFor(m => m[i].FirstName, "FirstName" + (i + 1))
                </td>
                <td style="width: 50%">
                    @Html.EditorFor(m => m[i].FirstName)
                </td>
            </tr>
        </table>
    </div>
    <div>
        <table style="width: 50%">
            <tr>
                <td style="width: 50%">
                    @Html.LabelFor(m => m[i].LastName, "LastName" + (i + 1))
                </td>
                <td style="width: 50%">
                    @Html.EditorFor(m => m[i].LastName)
                </td> 
            </tr>
        </table>
    </div>
    @Html.HiddenFor(m => m[i].BirthDate)
    @Html.HiddenFor(m => m[i].Role)
    }
    <input type="submit" value="Submit" />
}
